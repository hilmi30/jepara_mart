<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackgroundLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/thankyou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@color/white" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/check_clipboard"
                android:tint="@color/colorAccentGreen" />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thank_you"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thank_you_for_shopping"
                    android:textSize="16sp"
                    android:textColor="@color/textColorSecondaryLight"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>

            <LinearLayout
                android:id="@+id/transfer_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_total_price"
                    android:textSize="16sp"
                    android:textColor="@color/textColorSecondaryLight"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/currency_totalprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp"
                        android:textSize="30sp"
                        android:textColor="@color/colorAccentGreen"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/final_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="700.000"
                        android:textSize="30sp"
                        android:textColor="@color/colorAccentGreen"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <TextView
                    android:padding="10dp"
                    android:id="@+id/copy_totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/copy"
                    android:background="@color/white"
                    android:textColor="@color/colorAccentRed"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/please_transfer_via_our_account"
                    android:textSize="16sp"
                    android:textColor="@color/textColorSecondaryLight"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bank_name"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bank Mandiri"
                        android:textSize="16sp"
                        android:textColor="@color/textColorSecondaryLight"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/rekening_text"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="11122 233445 56677"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccentGreen"
                        android:gravity="end|center_vertical" />

                </LinearLayout>

                <TextView
                    android:padding="15dp"
                    android:id="@+id/copy_rekening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/copy"
                    android:background="@color/white"
                    android:textColor="@color/colorAccentRed"
                    android:layout_gravity="right"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_order_id"
                    android:textSize="16sp"
                    android:textColor="@color/textColorSecondaryLight"
                    android:layout_marginTop="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_alignParentStart="true"
                        android:id="@+id/order_code"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JM12345"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccentGreen" />

                    <TextView
                        android:layout_alignParentEnd="true"
                        android:padding="15dp"
                        android:id="@+id/copy_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/copy"
                        android:background="@color/white"
                        android:textColor="@color/colorAccentRed"
                        android:layout_gravity="right"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jepara_mart_will_verify_after_you_make_payment"
                    android:textSize="16sp"
                    android:textColor="@color/textColorSecondaryLight"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/order_status_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/order_status"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/button_margin"
                android:background="@drawable/rounded_corners_button_accent" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/continue_shopping_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/continue_shopping"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/button_margin"
                android:background="@drawable/rounded_corners_button_green" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/banner_adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        </FrameLayout>

    </RelativeLayout>

</ScrollView>
